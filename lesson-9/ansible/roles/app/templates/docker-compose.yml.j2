version: "3.3"

services:
  client:
    build:
      context: .
      dockerfile: ./Dockerfile
    container_name: app
    env_file: ./.env
    ports:
      - 3000:3000
    user: "{{ ansible_facts.getent_passwd[ansible_user][1] }}:{{ ansible_facts.getent_passwd[ansible_user][2] }}"
    command: ["node", "./src/app.js"]
